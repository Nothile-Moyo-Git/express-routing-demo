<%- include('../includes/header'); %>

    <body>

        <%- include('../includes/menu'); %>

        <main class="password-reset">

            <h1><%= pageTitle %></h1>

            <form class="password-reset__form" method="POST" action="/signup">

                <div class="password-reset__field">
                    <label for="emailInput" id="emailLabel" class="password-reset__label">Email Address*</label>
                    <input
                        type="email"
                        id="emailInput"
                        name="emailInput"
                        class="password-reset__input"
                        placeholder="Please enter your email address"
                        aria-labelledby="emailLabel"
                        autocomplete="off"
                        required
                    />
                </div>

                <div class="password-reset__field">
                    <label for="previousPasswordInput" id="previousPasswordLabel" class="password-reset__label">Previous Password*</label>
                    <input
                        type="password"
                        id="previousPasswordInput"
                        name="previousPasswordInput"
                        class="password-reset__input"
                        placeholder="Please enter your previous password"
                        aria-labelledby="previousPasswordLabel"
                        autocomplete="off"
                        required
                    />
                </div>

                <div class="password-reset__field">
                    <label for="newPasswordInput" id="newPasswordLabel" class="password-reset__label">New Password*</label>
                    <input
                        type="password"
                        id="newPasswordInput"
                        name="newPasswordInput"
                        class="password-reset__input"
                        placeholder="Please enter your new password"
                        aria-labelledby="newPasswordLabel"
                        autocomplete="off"
                        required
                    />
                </div>

                <div class="password-reset__field">
                    <label for="confirmNewPasswordInput" id="confirmNewPasswordLabel" class="password-reset__label">Confirm Your New Password*</label>
                    <input
                        type="password"
                        id="confirmNewPasswordInput"
                        name="confirmNewPasswordInput"
                        class="password-reset__input"
                        placeholder="Please confirm your new password"
                        aria-labelledby="confirmNewPasswordLabel"
                        autocomplete="off"
                        required
                    />
                </div>

                <input
                    type="hidden"
                    name="csrfToken"
                    value="<%= csrfToken %>"
                />

                <button class="button button--yellow">Reset Password</button>

            </form>
            
        </main>

    </body>

<%- include('../includes/footer'); %>