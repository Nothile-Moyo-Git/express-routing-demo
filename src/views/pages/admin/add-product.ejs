<%- include('../../includes/header'); %>
    <body>

        <%- include('../../includes/menu'); %>

        <main class="add-product">

            <% if (isAuthenticated === true) { %>

                <form action="/admin/add-product" method="POST" class="form">

                    <h1 class="form__page-title">Add Product</h1>

                    <div class="form__field">
                        <label for="product-title" id="title-label" class="form__label">Product Title</label>
                        <input 
                            type="text" 
                            name="title" 
                            class="form__input" 
                            id="product-title" 
                            aria-labelledby="title-label"
                            value="<%= oldInput.oldTitle %>"
                            required
                        />
                    </div>

                    <div class="form__field">
                        <label for="product-image" id="image-label" class="form__label">Image url</label>
                        <input
                            type="text"
                            name="image"
                            class="form__input"
                            id="product-image"
                            aria-labelledby="image-label"
                            required
                        />
                    </div>

                    <div class="form__field">
                        <label for="product-description" id="description-label" class="form__label">Product Description</label>
                        <input
                            type="text"
                            name="description"
                            class="form__input"
                            id="product-description"
                            aria-labelledby="image-description"
                            required
                        />
                    </div>

                    <div class="form__field">
                        <label for="product-price" id="price-label" class="form__label">Price</label>
                        <input
                            type="number"
                            name="price"
                            class="form__input"
                            id="product-price"
                            aria-labelledby="price-label"
                            step="0.01"
                            required
                        />
                    </div>

                    <input type="hidden" name="csrfToken" value=<%= csrfToken %>/>
                    <button type="submit" class="button button--yellow">Add Product</button>

                </form>
            
            <% } else { %>

                <%- include('../../components/fallback'); %>

            <% } %>

        </main>

    </body>
<%- include('../../includes/footer'); %>