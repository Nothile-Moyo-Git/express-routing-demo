<section class="pagination">

    <% for (let i = 0; i < numberOfPreviousPages; i++) { %>
        <a class="pagination__link pagination__link--inactive" href="<%= `?page=${i+1}` %>"><%= i+1 %></a>
    <% } %>

    <p class="pagination__link pagination__link--active"><%= currentPage %></p>

    <% for (let i = currentPage; i < currentPage + numberOfUpcomingPages; i++) { %>
        <a class="pagination__link pagination__link--inactive" href="<%= `?page=${i+1}` %>"><%= i+1 %></a>
    <% } %>

</section>