    <body>

        <%- include('../includes/menu'); %>

        <main class="product-detail">

            <a href="/products" class="product-detail__back-wrapper">
                <img
                    src="../left-arrow.svg"
                    alt="Go back arrow"
                    class="product-detail__back-arrow"
                />
                <p class="product-detail__back-text">Go back</p>
            </a>

            <% if (hasProduct === true) { %>

                <article class="product-detail__article">
                    <h1 class="product-detail__title"><%= productDetails.title %></h1>
                    <img 
                        src="<%= productDetails.image %>"
                        alt="Product image"
                        class="product-detail__image"
                    />
                    <p class="product-detail__description">
                        <%= productDetails.description %>
                    </p>
                    <p class="product-detail__price">
                        Â£<%= productDetails.price %>
                    </p>
                </article>

            <% }else{ %>

                <h1>No product information found</h1>

            <% } %>

        </main>

    </body>

