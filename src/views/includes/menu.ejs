                </li>

                <li class="menu__item">
                    <a href="/orders">Orders</a>
                </li>

                <li class="menu__item">
                    <a href="/admin/add-product">Add Product</a>
                </li>

                <li class="menu__item">
                    <a href="/admin/products">Admin Products</a>
                </li>

                <li class="menu__item">
                    <a href="/logout">Logout</a>
                </li>
                
            <% } else { %>

                <li class="menu__item">
                    <a href="/signup">Signup</a>
                </li>

                <li class="menu__item">
                    <a href="/login">Login</a>
                </li>

